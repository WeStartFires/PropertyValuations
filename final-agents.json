{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AgentEmails",
  "type": "object",
  "additionalProperties": false,
  "required": ["emails"],
  "properties": {
    "emails_line": {
      "type": "string",
      "description": "Lowercase sales-branch emails, one per brand, joined by ', '. Return 'NONE' if none found.",
      "pattern": "^\\s*(?:NONE|[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}(?:,\\s*[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}){5,})\\s*$"
    }
  }
}
