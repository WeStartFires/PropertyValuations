{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pricing Recommendation",
  "type": "object",
  "properties": {
    "recommended_marketing_price": {
      "type": "number",
      "description": "List price set on a Rightmove price band"
    },
    "marketing_price_type": {
      "type": "string",
      "enum": ["Guide Price", "Offers Over"],
      "description": "Label to display with the list price"
    },
    "estimated_achievable_price": {
      "type": "number",
      "description": "Likely sale price after normal negotiation"
    },
    "rationale": {
      "type": "string",
      "description": "Polite, homeowner-friendly explanation (â‰¤400 chars)"
    }
  },
  "required": [
    "recommended_marketing_price",
    "marketing_price_type",
    "estimated_achievable_price"
  ]
}
